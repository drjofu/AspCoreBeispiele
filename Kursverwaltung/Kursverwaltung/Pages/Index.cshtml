@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Nr</th>
      <th>Name</th>
      <th>Beschreibung</th>
      <th>Termine</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var kurs in Model.Kurse)
    {
    <tr>
      <td>@kurs.Kursnummer</td>
      <td>@kurs.Name</td>
      <td>@kurs.Beschreibung</td>
      <td>
        @foreach (var termin in kurs.Termine)
        {
          <span>@termin.Start.ToShortDateString()</span>
        }
      </td>
    </tr>
    }
  </tbody>
</table>

