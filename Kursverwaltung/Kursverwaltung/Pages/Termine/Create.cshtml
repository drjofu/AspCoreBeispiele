@page
@model Kursverwaltung.Pages.Termine.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Termin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Termin.KursId" class="control-label"></label>
                @*<select   asp-for="Termin.KursId" class ="form-control" asp-items="ViewBag.KursId" ></select>*@
              <select  asp-for="Termin.KursId"  class ="form-control" >
                @foreach (var item in Model.KursSelectList)
                {
                  <option value="@item.Id">@item.Text</option>
                }
              </select>
            </div>
            <div class="form-group">
                <label asp-for="Termin.Start" class="control-label"></label>
                <input asp-for="Termin.Start" class="form-control" />
                <span asp-validation-for="Termin.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
